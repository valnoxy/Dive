<UserControl x:Class="Dive.UI.Pages.TweaksContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dive.UI.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="19,40,19,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- step content -->
        <!--<ContentPresenter Grid.Row="1" Content="{Binding StepViewModel}"/>-->
        <ContentControl x:Name="FrameWindow" AllowDrop="True"/>

        <!-- buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0"
                       Content="{DynamicResource Cancel}"
                       x:Name="CancelBtn"
                       IsCancel="True"
                       MinWidth="80"
                       Icon="{ui:SymbolIcon ArrowExit20}"
                       Click="CancelBtn_Click"/>
            <ui:Button Grid.Column="2"
                       Content="{DynamicResource Back}"
                       x:Name="BackBtn"
                       Margin="-8,0,0,0"
                       MinWidth="80"
                       Icon="{ui:SymbolIcon ArrowLeft24}"
                       Click="Back_Click"
                       IsEnabled="False"/>
            <ui:Button Grid.Column="3"
                       Content="{DynamicResource Next}"
                       x:Name="NextBtn"
                       MinWidth="80"
                       Icon="{ui:SymbolIcon ArrowRight24}"
                       Click="Button_Click"
                       IsDefault="True"/>
        </Grid>
    </Grid>
</UserControl>

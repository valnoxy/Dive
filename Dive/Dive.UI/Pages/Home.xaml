<Page x:Class="Dive.UI.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dive.UI.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:userInterface="clr-namespace:Dive.UI.Common.UserInterface"
      mc:Ignorable="d" 
      d:DesignHeight="549" d:DesignWidth="728"
      Loaded="Dashboard_OnLoaded"
      Title="Home">

    <Grid Margin="19,20,19,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,8,0,0">
                <ui:TextBlock Text="Welcome to Dive!" FontTypography="Title" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="CheckmarkCircle24" Filled="True" Foreground="{DynamicResource SystemFillColorSuccessBrush}" FontSize="24" Margin="0,0,5,0"/>
                    <userInterface:Skeleton x:Name="ImagesSkeleton" Value="0" Size="20" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <ui:TextBlock Text=" Images are ready" FontTypography="Subtitle" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
        </StackPanel>

        <Grid Grid.Row="0" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ui:Card Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <ui:ImageIcon x:Name="WinIcon" Source="pack://application:,,,/Assets/Windows-Unknown.png" Height="60" Margin="0,0,10,0"/>
                    <StackPanel>
                        <ui:TextBlock Text="Windows 11 Compatibility" FontTypography="BodyStrong"/>
                        <ui:TextBlock x:Name="WinText" Text="Please wait until this check has been completed..." TextWrapping="Wrap" FontTypography="Body" Width="270"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </Grid>

        <StackPanel Grid.Row="2" Margin="0,220,0,0">
            <ui:CardAction
                Margin="0,0,0,8"
                Click="SwitchToApplyPage"
                Icon="{ui:SymbolIcon WindowApps24}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="Medium"
                        Text="{DynamicResource ApplyImage}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="{DynamicResource ApplyImageDescription}" />
                </StackPanel>
            </ui:CardAction>
            <ui:CardAction
                Margin="0,0,0,8"
                Click="SwitchToCapturePage"
                Icon="{ui:SymbolIcon Copy24}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="Medium"
                        Text="{DynamicResource CaptureWindows}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="{DynamicResource CaptureWindowsDescription}" />
                </StackPanel>
            </ui:CardAction>
        </StackPanel>
    </Grid>
</Page>

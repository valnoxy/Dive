<ui:FluentWindow x:Class="Dive.UI.Pages.Extras.ConfigAssistant.ConfigAssistantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Dive.UI.Pages.Extras.ConfigAssistant"
        mc:Ignorable="d"
        Title="Configuration Assistant" Height="620" Width="800"
        MinHeight="620" MinWidth="800"
        ExtendsContentIntoTitleBar="true"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
                CornerRadius="8,0,0,0">
            <Frame Margin="15,10,15,10" x:Name="FrameWindow" />
        </Border>

        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="{DynamicResource Back}"
                    x:Name="BackBtn"
                    Margin="-8,0,0,0"
                    MinWidth="80"
                    Click="Back_Click"
                    IsEnabled="False"/>
            <Button Content="{DynamicResource Next}"
                    x:Name="NextBtn"
                    Margin="10,0,15,0"
                    MinWidth="80"
                    Click="Button_Click"
                    IsDefault="True"/>
        </StackPanel>

        <ui:TitleBar
            Title="Configuration Assistant"
            ShowMinimize="False"
            ShowMaximize="False"
            Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/DiveV2.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
